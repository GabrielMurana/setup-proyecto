extends ../layout

block content
  a(href='/bicicletas/create') Nueva Bicicleta
  h1.text-danger Bicicletas

  p='Bicicletas: ' + bicis.length 
  if bicis.length == 0
    h1.text-info.center Listado Vacio
  else
    table.table 
      thead 
        tr 
        th(scope='col') #
        th(scope='col') Color
        th(scope='col') Modelo
        th(scope='col') Ubicacion
        th(scope='col')
        th(scope='col')
      tbody 
        each bici in bicis
          tr 
          th(scope='row')= bici.id
          td= bici.color
          td= bici.modelo
          td= bici.ubicacion
          td 
            a(href='bicicletas/' + bici.id + '/update') Editar 
          td
            form.inline(method='post' action='bicicletas/' + bici.id + '/delete')
              input(type="hidden" name='id' value= bici.id)
              button.link-button(type='submit' name='submitParam' value='submitValue' calss='btn')= 'Eliminar'

